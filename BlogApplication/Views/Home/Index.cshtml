@{
    ViewBag.Title = "Home Page";
}


@model IEnumerable<BlogApplication.Models.BlogPost>

<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url('../../img/home-bg.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Mack's Blog Project</h1>
                    <hr class="small">
                    <span class="subheading">A Simple Blog By a Simple Coder</span>
                </div>
            </div>
        </div>
    </div>
</header>



<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <div class="post-preview">
                
                @foreach (var item in Model)
                {
                <h1 class="post-title">
                    @Html.ActionLink(item.Title, "Details", "BlogPosts", new { slug = item.Slug }, null)
                </h1>
                    <div>
                        <p class="post-subtitle">
                            Posted on @item.Created.ToString("dd/MM/yyyy HH:mm")
                        </p>

                    </div>
                    <div>
                        @if (item.Updated != null)
                        {
                        <p class="post-subtitle">
                            Updated on @item.Updated.Value.ToString("dd/MM/yyyy HH:mm")
                        </p>
                            
                        }
                    </div>
                        


                    
                    <p>
                        @if (item.MediaURL != null)
                        {

                            <img class="img-responsive" src="@item.MediaURL" alt="">
                        }
                    </p>

                    @Html.Raw(item.Body.Substring(0, 520) + "..." + "   " + @Html.ActionLink("Read Full Post","Details", "BlogPosts", new { slug = item.Slug }, null))
                }

                <!-- Pager -->
                <ul class="pager">
                    <li class="next">
                        @Html.ActionLink("Post Archive", "Index", "BlogPosts")
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<hr>

<!-- Footer -->
<footer>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <ul class="list-inline text-center">
                    <li>
                        <a href="https://www.facebook.com">
                            <span class="fa-stack fa-lg">
                                <i class="fab fa-facebook-f"></i>
                            </span>
                        </a>
                    </li>
                    <li>
                        <a href="https://www.linkedin.com/in/mackenzie-hatcher-37413316a/">
                            <span class="fa-stack fa-lg">
                                <i class="fab fa-linkedin-in"></i>
                            </span>
                        </a>
                    </li>
                    <li>
                        <a href="https://github.com/MackHatcher">
                            <span class="fa-stack fa-lg">
                                <i class="fab fa-github"></i>
                            </span>
                        </a>
                    </li>
                </ul>
                <p class="copyright text-muted">Copyright &copy; Your Website 2018</p>
            </div>
        </div>
    </div>
</footer>